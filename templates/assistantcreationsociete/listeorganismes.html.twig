{% extends 'base_assistant.html.twig' %}

{%block body %}

<p>Etablissement en cours {{etablissement.libelle}}

  <table class="annuaireorganismes">
    
        <thead>
            <tr>
                    <th>Libelle</th>
                    <th>nature</th>
                    <th>adresse</th>
                    <th>code postal</th>
                    <th>ville</th>
                    <th>affecter l'établissement</th>

            </tr>
        
        </thead>
        <tbody>

            {%for organismes in annuaireorganismes %}
                <tr>
                    <td>{{organismes.libelle}}</td>
                    <td>{{organismes.nature}}</td>
                    <td>{{organismes.adresse}}</td>
                    <td>{{organismes.codepostal}}</td>
                    <td>{{organismes.ville}}</td>
                    {% if nature=="URSSAF" %}
                    <td><a href="{{ path('assistantcreationsociete_organisme_create', {'idprojet':projet.id,'idsociete':societe.id,'idetablissement':etablissement.id,'idorganisme':organismes.id, 'nature':"Retraite"})}}"class="btn btn-primary"" >Selectionner votre URSSAF</a></td>
                    {% endif %}
                    {% if nature=="Retraite" %}
                    <td><a href="{{ path('assistantcreationsociete_organisme_create', {'idprojet':projet.id,'idsociete':societe.id,'idetablissement':etablissement.id,'idorganisme':organismes.id, 'nature':"Prevoyance"})}}"class="btn btn-primary"" >Selectionner votre caisse de retraite</a></td>
                    {% endif %}
                    {% if nature=="Prevoyance" %}
                    <td><a href="{{ path('assistantcreationsociete_organisme_create', {'idprojet':projet.id,'idsociete':societe.id,'idetablissement':etablissement.id,'idorganisme':organismes.id, 'nature':"Mutuelle"})}}"class="btn btn-primary"" >Selectionner votre caisse de prévoyance</a></td>
                    {% endif %}
                    {% if nature=="Mutuelle" %}
                    <td><a href="{{ path('assistantcreationsociete_organisme_create', {'idprojet':projet.id,'idsociete':societe.id,'idetablissement':etablissement.id,'idorganisme':organismes.id, 'nature':"Mutuelle"})}}"class="btn btn-primary"" >Selectionner votre caisse de mutuelle</a></td>
                    {% endif %}                         
                </tr>
            {%endfor%}
        </tbody>
     </table>

 
{%endblock%}
