{% extends 'base_assistant.html.twig' %}

{%block body %}


<p>Bibliotheque du projet</p>
   
<p>Liste des classifications de la CCN {{ccnprojet.idcc}}</p>

<table class="classifications">
    
        <thead>
            <tr>
                    <th>Type</th>
                    <th>Valeur</th>
            </tr>
        
        </thead>
        <tbody>
                {%for classification in ccnprojet.classifications%}
                <tr>
                    <td>{{classification.type}}</td>
                    <td>{{classification.valeur}}</td>
                    <td><a class="btn btn-primary" href="{{ path('assistantcreationsociete_remove_classification',{'idprojet':projet.id,'idsociete':societe.id,'idccn':ccnprojet.id,'idclassification':classification.id,})}}">Editer la classification</a></td>
                    <td><a class="btn btn-primary" href="{{ path('assistantcreationsociete_remove_classification',{'idprojet':projet.id,'idsociete':societe.id,'idccn':ccnprojet.id,'idclassification':classification.id,})}}">Supprimer la classification</a></td>

                
                </tr>
             {%endfor%}

        </tbody>
     </table>
<a class="nav-link" href="{{ path('assistantcreationsociete_add_classification',{'idprojet':projet.id,'idsociete':societe.id,'idccn':ccnprojet.id})}}">Ajouter des classifications</a>

<a class="nav-link" href="{{ path('assistantcreationsociete_emploi_create',{'idprojet':projet.id,'idsociete':societe.id})}}">Cr√©er les emplois</a>

{%endblock%}
