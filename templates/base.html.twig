<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://bootswatch.com/4/darkly/bootstrap.min.css">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>

        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" href="{{path('projet_accueil')}}">Projet analyse</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">                 
                {% if controller_name == "BibliothequeccnController" %}          

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path ('bibliothequeccn') }}">Liste des conventions collectives de la bibliotheque</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('bibliotheque_proposerccn_show') }}">Proposer une convention collective</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('bibliothequeccn_create') }}">Créer une nouvelle convention collective</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('annuaireorganisme_show') }}">Annuaire organismes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('populationplandepaie_show') }}">Plan de paie</a>
                    </li>
                {% endif %}


                {% if controller_name == "projet_gestion" %}            
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('projet_addutilisateur',{'idprojet':projet.id})}}">Ajouter un client</a>
                    </li>     
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('projet_addutilisateurcegid',{'idprojet':projet.id})}}">Ajouter un utilisateur CEGID</a>
                    </li>          
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('projet_edit',{'idprojet':projet.id})}}">Editer le projet</a>
                    </li>
                {% endif %}

                {% if controller_name != "Assistant_add_projet" and controller_name != "projet_gestion" and controller_name != "BibliothequeccnController" %}            
                    <li class="nav-item">
                        <a class="nav-link" href="">Tableau de bord projet</a>
                    </li>                    
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('projet_assistantcreationsociete',{'idprojet':projet.id})}}">Assistant création société</a>
                    </li>                
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('projet_analyse',{'idprojet':projet.id})}}">Cahiers</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('recette_index',{'idprojet':projet.id})}}">Recette</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('ticket_index',{'idprojet':projet.id})}}">Ticket</a>
                    </li>
                {% endif %}
                
                {% if not app.user%}
    
                    <li class"nav-item">
                        <a href="{{ path('security_login')}}" class="nav-link">
                        Connexion
                        </a>
                    </li>

                {% else %}
                    <li class"nav-item">
                        <a href="{{ path('security_registrationlogout')}}" class="nav-link">
                        Deconnexion
                        </a>
                    </li>
                {% endif %}
            </div>
        </nav>

    
        <div class="container">

            {% block body %}{% endblock %}
            {% block javascripts %}{% endblock %}
        </div>

    </body>
</html>