                    </li>
                    <li class"nav-item">
                    <a class="nav-link" href="">CCN : {{ccn.libelle}}</a>
                    </li>
                    <li class"nav-item">
                    <a class="nav-link" href="">Etape créer une population prime ancienneté</a>
                    </li>
                {% endif %}   
            {% if  controller_name=="Assistant_créer_valeurprimeanciennete" %}
    
