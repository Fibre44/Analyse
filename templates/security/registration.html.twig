{% extends 'base_security.html.twig' %}

{%block body %}

    <h1>Ajouter un utilisateur</h1>

    {{form_start(form)}}

    {{form_row(form.email,{'label':'Email utilisateur','attr':{'placeholder':'Adresse email'}})}}
    {{form_row(form.nom,{'label':'Nom utilisateur','attr':{'placeholder':'Nom utilisateur'}})}}
    {{form_row(form.prenom,{'label':'Prénom utilisateur','attr':{'placeholder':'Prénom utilisateur'}})}}
    {{form_row(form.groupe,{'label':'Groupe utilisateur','attr':{'placeholder':'Groupe utilisateur'}})}}
    {{form_row(form.password,{'label':'Mot de passe utilisateur','attr':{'placeholder':'Taper votre mot de passe'}})}}
    {{form_row(form.confirm_password,{'label':'Répéter mot de passe utilisateur','attr':{'placeholder':'Confirmer votre mot de passe'}})}}



    <button type="submit" class="btn btn-succes">Créer un utilisateur</button>
    {{form_end(form)}}

{%endblock%}